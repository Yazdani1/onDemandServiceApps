<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homebackground"
    tools:context="yazdaniscodelab.jobtoday.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/jbicon" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="GET A JOB"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:background="@drawable/edittextbackground"
            android:id="@+id/get_job"
            android:textAppearance="?android:textAppearanceMedium"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/jbicon" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="HIRE STAFF"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:background="@drawable/hirestaf_background"
            android:id="@+id/hire_job"
            android:textAppearance="?android:textAppearanceMedium"
            />

    </LinearLayout>


</LinearLayout>
